@using Makerlab.Helpers
@{
    ViewBag.Title = "MakerLab :: Brugere";
}
@model List<Makerlab.Models.User> 
<div class="container">
    <div class="row">
        @Html.Partial("_dashboard_navbar")
        
        <div class="col-md-10">
            <h3 class="header-no-margin">Brugere</h3>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Rolle</th>
                    <th>Studienummer</th>
                    <th>Navn</th>
                    <th>Email</th>
                    <th>Handlinger</th>
                </tr>

                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserRole.RoleName</td>
                            <td>@user.StudieNummer</td>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>
                                <a href="@Url.Action("Edit", "Users", new {id = user.Id})" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-pencil"></i> </a>
                                <button class="btn btn-danger btn-sm"><i class="glyphicon glyphicon-remove"></i> </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

