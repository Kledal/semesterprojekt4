@model Makerlab.Models.Printer

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <div class="row">

        <div class="col-md-offset-3 col-md-6">
            <h2>Stop print</h2>

            <div class="panel panel-default">
                <div class="panel-body">

                    <h3>Er du sikker på at du vil stoppe det nuværende print?</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                Printer
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <input type="hidden" name="to" value="@ViewBag.redirectTo"/>
                            
                            <div class="form-actions no-color">
                                <input type="submit" value="Stop print" class="btn btn-danger"/>
                                @if ((string)ViewBag.redirectTo == "frontend")
                                {
                                    <a href="@Url.Action("Printers", "Frontend")" class="btn btn-success">Tilbage</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Printers", "Dashboard")" class="btn btn-success">Tilbage</a>
                                }
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>

    </div>

</div>
